{
  "name": "@fitzzero/quickdraw-core",
  "version": "0.1.0",
  "description": "Fast fullstack patterns for real-time applications with Socket.io and TanStack Query",
  "type": "module",
  "main": "./dist/shared/index.js",
  "module": "./dist/shared/index.js",
  "types": "./dist/shared/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/shared/index.js",
      "types": "./dist/shared/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./server/testing": {
      "import": "./dist/server/testing.js",
      "types": "./dist/server/testing.d.ts"
    },
    "./client/testing": {
      "import": "./dist/client/testing.js",
      "types": "./dist/client/testing.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "socket.io",
    "tanstack-query",
    "react",
    "real-time",
    "fullstack",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@prisma/client": ">=5.0.0",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "socket.io": ">=4.0.0",
    "socket.io-client": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "socket.io": {
      "optional": true
    },
    "socket.io-client": {
      "optional": true
    }
  },
  "dependencies": {
    "jose": "^5.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@prisma/client": "^5.10.0",
    "@tanstack/react-query": "^5.20.0",
    "@testing-library/react": "^14.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.3.0",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0",
    "winston": "^3.11.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  }
}
